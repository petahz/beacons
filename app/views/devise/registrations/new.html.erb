<h1>Sign up</h1>

<div class="form">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-item"><%= image_tag("username_icon.png", class: "user-info-icons") %>
  <%= f.email_field :username, placeholder: "Username", :autofocus => true, class: "text" %></div>

  <div class="form-item"><%= image_tag("email_icon.png", class: "user-info-icons") %>
  <%= f.email_field :email, placeholder: "Email", class: "text" %></div>

  <div class="form-item"><%= image_tag("password_icon.png", class: "user-info-icons") %>
  <%= f.password_field :password, placeholder: "Password", class: "text" %></div>

  <div class="form-item"><%= image_tag("password_icon.png", class: "user-info-icons") %>
  <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "text" %></div>

  <div><%= f.submit "Sign up", class: "button" %></div>
<% end %>

<p><%= render "devise/shared/links" %></p>

</div>