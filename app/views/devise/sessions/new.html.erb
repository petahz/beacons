<h1>Sign in</h1>

<div class="form">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="form-item">
  <%= f.email_field :email, placeholder: "Email", class: "text", :autofocus => true %></div>

  <div class="form-item">
  <%= f.password_field :password, placeholder: "Password", class: "text" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p></div>
  <% end -%>

  <%= f.submit "Sign in", class: "button2" %>
<% end %>


<p><%= render "devise/shared/links" %></p>

</div>