<h1>Non-Profit Mission Board</h1>

<div class="create-project">
	<%= link_to "Create New Project", new_project_path, class: "button", id: "center-button" %>
</div>

<div class="projects-managed">
	<h2>PROJECTS MANAGED</h2>

	<div class="dashboard">
		<p><% unless Connection.where(user_id: current_user.id).blank? %>

				<% @user.projects.each do |project| %>
					<%= project.name %> 
					<%= link_to "View", project_path(project) %>
					<%= link_to "Edit", edit_project_path(project) %>
					<%= link_to "Cancel Project", project, method: :delete, data: { confirm: 'Are you sure you want to cancel this project? An e-mail notification would be sent out to all participants.'} %>
					<p>The Superhero Participants</p>
						<% project.users.heros.each do |hero| %>
							<%= hero.username %>
						<% end %>
				<% end %>
			<% end %>
		</p>
	</div>
</div>
